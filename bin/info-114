#!/bin/sh

url="http://Nicolas.Thiery.name/Enseignement/Info114/"
if [ -n "$JUPYTERHUB_USER" ]; then
    USER=`basename -s -at-u-psud.fr $JUPYTERHUB_USER`
fi
SIF=tp-ssh1.dep-informatique.u-psud.fr
COURSE=Info114
SCRIPT=info-114
#EXCHANGE=/public/info-114/exchange
EXCHANGE=~nthiery/info-114/exchange
export LANG=fr_FR.UTF-8

help () {
    cat <<EOF

Aide pour l'utilisation de la commande $SCRIPT
===============================================

Télécharger et extraire l'archive pour un TP ou un projet (ici pour la semaine 1):

       cd ~/$COURSE
       $SCRIPT fetch Semaine1

Soumettre son TP ou projet (ici pour la semaine 1):

       cd ~/$COURSE
       $SCRIPT submit Semaine1

Lancer le notebook Jupyter:

       $SCRIPT jupyter notebook
EOF
}

advanced_help() {
    cat <<EOF

Aide pour l'utilisation de la commande $SCRIPT
===============================================

Lancer une commande arbitraire dans l'environnement conda:

     $SCRIPT run commande arg1 arg2

Mettre à jour son répertoire $COURSE à partir du répertoire éponyme sur les machines du SIF (par rsync):

     $SCRIPT sync

Monter le répertoire $COURSE depuis les machines du SIF par sshfs:

     $SCRIPT mount

Collecter les soumissions des étudiants; à lancer par Nicolas sur les machines du SIF:

     $SCRIPT collect Semaine3
EOF
}


check_dir () {
    if [ `pwd` != "$HOME/$COURSE" ]; then
        echo Vous devez être dans le sous-répertoire $COURSE de votre répertoire pour lancer cette commande
        exit 1
    fi
}

run () {
    #tput setaf 2
    echo -n "$SCRIPT: exécution de:"
    #tput rmul
    echo -n " "
    tput setaf 2
    echo "$@"
    tput sgr0
    if [ -z $DRY_RUN ]; then
        "$@" || exit 1
    fi
}

fetch () {
    archive=$1
    run wget "$url/$archive.zip"
    run unzip "$archive.zip"
    run rm "$archive.zip"
}

submit() {
    ASSIGNMENT=$1
    if [ -n "$JUPYTERHUB_USER" ]; then # Sur le serveur JupyterHub
        echo $SCRIPT: transfert du dossier $ASSIGNMENT sur les machines du SIF
        run rsync --update -avz  $HOME/$COURSE/$ASSIGNMENT $USER@$SIF:.$COURSE/$ASSIGNMENT
        echo $SCRIPT: soumission du dossier $ASSIGNMENT
        run ssh $USER@$SIF "cd .$COURSE && $SCRIPT submit $ASSIGNMENT"
    else
        run nbgrader submit --Exchange.root=/public/info-111/exchange --course=$COURSE $ASSIGNMENT
    fi
}

collect() {
    ASSIGNMENT=$1
    run nbgrader collect --Exchange.root=/public/info-111/exchange --course=$COURSE $ASSIGNMENT
}

mount() {
    cd $HOME
    run mkdir -p $COURSE
    run sshfs $USER@$SIF:$COURSE $COURSE
}

rsync_from_sif() {
    cd $HOME
    run rsync --update -avz  $USER@$SIF:$COURSE/ $COURSE/
}
rsync_to_sif() {
    cd $HOME
    run rsync --update -avz  $COURSE/ $USER@$SIF:$COURSE/
}

clean_root_files() {
    cd $HOME
    echo "Nettoyage des fichiers indus"
    for x in *; do test -O $x  || mv $x .$x; done
}

command=$1

if [ "$command" = "-n" ]; then
    DRY_RUN="true"
    shift
    command=$1
fi

if [ -z $command ]; then
    help;
    exit 0
fi

shift || help

case $command in
    help)
        help
        exit 0;;
    advanced_help)
        advanced_help
        exit 0;;
    g++)
        command="g++ -g -Wall -pedantic -Wno-sign-compare -Wno-unused-value -std=c++11 ";;
    jupyter)
        if [ "$1" = "notebook" ]; then
            shift
            command="jupyter notebook --ip=127.0.0.1"
        fi;;
    get)
        check_dir
        fetch "$@"
        exit 0;;
    fetch)
        check_dir
        fetch "$@"
        exit 0;;
    submit)
        check_dir
        submit "$@"
        exit 0;;
    collect)
        # check_dir /public/info-111
        collect "$@"
        exit 0;;
    run) # run an arbitrary command in the conda environment; for testing and teacher's use
        command="$1"
        shift;;
    mount)
        mount
        exit 0;;
    sync)
        rsync_from_sif
        rsync_to_sif
        exit 0;;
    clean_root_files)
        clean_root_files
        exit 0;;
    *)
        echo commande $SCRIPT $command inconnue
        help
        exit 1
        ;;
esac

run $command "$@"
